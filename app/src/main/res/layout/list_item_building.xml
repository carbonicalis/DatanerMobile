        <TextView
            android:id="@+id/building_name"
            style="@style/BuildingItems"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:textSize="@dimen/building_text_size"
            app:buildingName="@{buildingRetrofit}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/building_image"
            app:layout_constraintTop_toTopOf="@+id/building_image"
            tools:text="Bandtec Paulista" />

        <TextView
            android:id="@+id/building_devices"
            style="@style/BuildingItems"
            android:layout_marginTop="24dp"
            app:buildingDevices="@{buildingRetrofit}"
            app:layout_constraintEnd_toEndOf="@+id/building_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/building_name"
            app:layout_constraintTop_toBottomOf="@+id/building_name"
            tools:text="37/50 devices ativos" />

        <Button
            android:id="@+id/bt_details"
            style="@style/BuildingButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:padding="@dimen/default_padding_minor"
            android:text="@string/details"
            android:background="@drawable/custom_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/building_image"
            app:layout_constraintTop_toBottomOf="@+id/building_devices"
            app:layout_constraintVertical_bias="0.0"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>
