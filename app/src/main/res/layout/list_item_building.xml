    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickListener.onClick(buildingRetrofit)}"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_text_view"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/building_image"
            android:layout_width="@dimen/building_icon_size"
            android:layout_height="@dimen/building_icon_size"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/building"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/building" />

