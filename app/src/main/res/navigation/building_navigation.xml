<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/building_navigation"
    app:startDestination="@id/buildingFragment">

    <fragment
        android:id="@+id/buildingFragment"
        android:name="com.example.datanermobile.building.BuildingFragment"
        android:label="building_fragment"
        tools:layout="@layout/building_fragment" >
        <action
            android:id="@+id/action_buildingFragment_to_buildingUpdateFragment"
            app:destination="@id/buildingUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/buildingUpdateFragment"
        android:name="com.example.datanermobile.building.update.BuildingUpdateFragment"
        android:label="BuildingUpdateFragment" >
        <action
            android:id="@+id/action_buildingUpdateFragment_to_buildingFragment"
            app:destination="@id/buildingFragment"
            app:launchSingleTop="false"
            app:popUpToInclusive="true" />
        <argument
            android:name="buildingKey"
            app:argType="integer" />
    </fragment>
</navigation>