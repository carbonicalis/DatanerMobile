<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/device_navigation"
    app:startDestination="@id/deviceFragment">

    <fragment
        android:id="@+id/deviceFragment"
        android:name="com.example.datanermobile.device.DeviceFragment"
        android:label="DeviceFragment"
        tools:layout="@layout/device_fragment">
        <action
            android:id="@+id/action_deviceFragment_to_deviceCreateFragment"
            app:destination="@id/deviceCreateFragment" />
        <action
            android:id="@+id/action_deviceFragment_to_deviceUpdateFragment"
            app:destination="@id/deviceUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/deviceCreateFragment"
        android:name="com.example.datanermobile.device.create.DeviceCreateFragment"
        android:label="DeviceCreateFragment" >
        <action
            android:id="@+id/action_deviceCreateFragment_to_deviceFragment"
            app:destination="@id/deviceFragment"
            app:popUpTo="@id/deviceFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="workplaceId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/deviceUpdateFragment"
        android:name="com.example.datanermobile.device.update.DeviceUpdateFragment"
        android:label="DeviceUpdateFragment" >
        <action
            android:id="@+id/action_deviceUpdateFragment_to_deviceFragment"
            app:destination="@id/deviceFragment"
            app:popUpTo="@id/deviceFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="device"
            app:argType="com.example.datanermobile.device.network.AllWorkplaceDevices" />
    </fragment>
</navigation>